<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News Page</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>

  <body class="container" style="margin-top: 50px">
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-pills w-100">
          <li class="nav-link pt-2">News</li>
          <li class="nav-link ml-auto">
            <a href="/news/add" class="nav-link active">Add News<%= data_news[0].Topic %></a>
          </li>
        </ul>
      </div>
      <div class="card-body">
        <% if(data_news.length) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">No.</th>
              <th scope="col">Topic</th>
              <th scope="col">Detail</th>
              <th width="200px">Picture</th>
              <th width="200px"><%= data_news[0].Topic %></th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < data_news.length; i++) { %>
            <tr>
              <th scope="row"><%= data_news[i].ID %></th>
              <td><%= data_news[i].Topic %></td>
              <td><%= data_news[i].Detail_1 %> <br /><%= data_news[i].Detail_2 %></td>
              <td><%= data_news[i].Picture %></td>
              <td>
                <a
                  href="../books/edit/<%= data_news[i].id %>"
                  class="btn btn-success edit"
                  >Edit</a
                >
                <a
                  href="../books/delete/<%= data_news[i].id %>"
                  onclick="return alert('Are you sure?')"
                  class="btn btn-danger delete"
                  >Delete</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data_news.length) { %>
        <p class="text-center">No book found!</p>
        <% } %>
      </div>
    </div>
  </body>
</html>

